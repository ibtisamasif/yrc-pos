<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for activities with no ActionBar-->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SignupButtonStyle">
        <item name="android:background">@drawable/signup_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MobileNumberFieldsStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="ForgetPasswordButtonStyle">
        <item name="android:background">@drawable/forget_password_button_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhatsYourNameTextStyle" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="CurrentLocationTextStyle">
<!--        <item name="android:drawableStart">@drawable/ic_map_marker</item>-->
<!--        <item name="android:drawableLeft">@drawable/ic_map_marker</item>-->
<!--        <item name="android:drawablePadding">@dimen/_4sdp</item>-->
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationHeaderTitleTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationItemsTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorRedError</item>
    </style>

    <style name="ProfileScreenDarkDropDownItemStyle">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ArithmeticButtonStyle">
        <item name="android:background">@drawable/arithmetic_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CreditButtonStyle">
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_19sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CashButtonStyle">
        <item name="android:background">@drawable/arithmetic_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_19sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">28sp</item>
    </style>
</resources>
