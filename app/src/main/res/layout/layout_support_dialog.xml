<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/alert_dialog_green_background"
        android:paddingStart="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp">

    <com.yrc.pos.core.views.YrcTextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/call_or_email_us"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            app:fontType="Regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/_15sdp"
            android:text="x"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_title" />

    <com.yrc.pos.core.views.YrcTextView
            android:id="@+id/textView_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/_50sdp"
            android:paddingRight="@dimen/_50sdp"
            android:text="@string/support_email"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14sdp"
            app:fontType="Light"
            app:layout_constraintStart_toStartOf="@+id/textView_title"
            app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    <com.yrc.pos.core.views.YrcTextView
            android:id="@+id/textView_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@android:drawable/stat_sys_phone_call"
            android:drawablePadding="@dimen/_13sdp"
            android:drawableTint="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_40sdp"
            android:text="@string/support_number"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14sdp"
            app:fontType="Light"
            app:layout_constraintStart_toStartOf="@+id/textView_email"
            app:layout_constraintTop_toBottomOf="@+id/textView_email" />

</androidx.constraintlayout.widget.ConstraintLayout>